{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "removeComments": false,
        "outDir": "dist",
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ES2017"
    },
    "include": [
        "src/**/*"
    ],    
    "exclude": [
      "./node_modules",
      "./dist/"
    ]
}
